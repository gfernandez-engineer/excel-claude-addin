<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">

  <Id>12345678-aaaa-bbbb-cccc-1234567890ab</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Gian</ProviderName>
  <DefaultLocale>es-ES</DefaultLocale>
  <DisplayName DefaultValue="Claude Assistant"/>
  <Description DefaultValue="Complemento para interactuar con Claude desde Excel"/>

  <!-- Ícono del complemento (opcional, puedes agregarlo más adelante) -->
  <IconUrl DefaultValue="https://raw.githubusercontent.com/gfernandez-engineer/excel-claude-addin/main/icon.png"/>

  <!-- Página de soporte -->
  <SupportUrl DefaultValue="https://raw.githubusercontent.com/gfernandez-engineer/excel-claude-addin/main/readme.md"/>

  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>

  <!-- Panel lateral que se abrirá en Excel -->
  <DefaultSettings>
    <!-- Ruta local a tu panel privado -->
    <SourceLocation DefaultValue="file:///C:/Users/Gian/excel-claude-addin/panel.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>
</OfficeApp>
